  <style>
    /* Form elements (scoped below to avoid reset libraries) */
    label{display:block;font-weight:700;margin:6px 0 6px}
    input, textarea{width:100%;padding:12px 12px;border-radius:12px;border:1.5px solid #d8e9f2;background:#f9feff;font-family:inherit;font-size:16px;outline: none;transition:border .2s, box-shadow .2s}
