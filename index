  <script>
    // Mobile menu toggle (fixed, scrollable, accessible)
    (function(){
      const btn = document.getElementById('hamburger');
      const menu = document.getElementById('mobileMenu');
      const close = document.getElementById('closeMenu');
      const links = menu.querySelectorAll('.m-link');
      function open(){ menu.classList.add('open'); menu.setAttribute('aria-hidden','false'); btn.setAttribute('aria-expanded','true'); document.body.style.overflow='hidden'; }
      function hide(){ menu.classList.remove('open'); menu.setAttribute('aria-hidden','true'); btn.setAttribute('aria-expanded','false'); document.body.style.overflow='auto'; }
      btn.addEventListener('click',()=> menu.classList.contains('open') ? hide() : open());
      close.addEventListener('click', hide);
      links.forEach(a=> a.addEventListener('click', hide));
      // Escape key closes
      window.addEventListener('keydown', (e)=>{ if(e.key==='Escape' && menu.classList.contains('open')) hide(); });
      // Copyright year
      document.getElementById('y').textContent = new Date().getFullYear();
    })();
  </script>
</body>
